generator client {
  provider        = "prisma-client-js"
  output          = "./src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

enum TransactionStatus {
  PENDING
  REJECTED
  CANCELLED
  SUCCESSFUL
}

model User {
  id                  Int           @id @default(autoincrement())
  name                String
  email               String        @unique
  password            String
  SenderTransaction   Transaction[] @relation("sender")
  RecieverTransaction Transaction[] @relation("reciever")
  token               String?
}

model Transaction {
  id             Int               @id @default(autoincrement())
  initialisedAt  DateTime          @default(now())
  senderId       Int
  sender         User              @relation(name: "sender", map: "sender", fields: [senderId], references: [id])
  recieverId     Int
  reciever       User              @relation(name: "reciever", map: "reciever", fields: [recieverId], references: [id])
  amount         Float
  acceptedAt     DateTime
  status         TransactionStatus @default(SUCCESSFUL)
  expirationTime DateTime
  signature      String
  previousHash   String
}

model PendingTransaction {
  id             Int               @id @default(autoincrement())
  initialisedAt  DateTime          @default(now())
  senderId       Int
  recieverId     Int
  amount         Float
  status         TransactionStatus @default(PENDING)
  expirationTime DateTime
  signature      String
  previousHash   String
}

model RejectedTransaction {
  id              Int               @id @default(autoincrement())
  initialisedAt   DateTime          @default(now())
  senderId        Int
  recieverId      Int
  amount          Float
  acceptedAt      DateTime?
  status          TransactionStatus @default(PENDING)
  expirationTime  DateTime
  signature       String
  previousHash    String
  rejectionReason String?
}
